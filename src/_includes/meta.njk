<meta name="generator" content="Eleventy">
<meta name="robots" content="index, follow">

<link rel="canonical" href="{{ site.url | stripHtmlExtension }}{{ page.url | stripHtmlExtension }}">

<meta name="description" content="{{ description | default(site.description) | safe }}">
<meta property="og:locale" content="ru_RU">
<meta property="og:type" content="website">
<meta property="og:title" content="{{ title | default(site.title) | safe }}">
<meta property="og:url" content="{{ site.url | stripHtmlExtension }}{{ page.url | stripHtmlExtension }}">
<meta property="og:image" content="{{ site.url }}{{ image | default(site.image) }}">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:description" content="{{ description | safe }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title | default(site.title) | safe }}">
<meta name="twitter:description" content="{{ description | default(site.description) | safe }}">
<meta name="twitter:site" content="{{ site.name }}">
<meta name="twitter:image" content="{{ site.url }}{{ image | default(site.image) }}">

<meta property="og:article:published_time" content="{{ date | date('yyyy-LL-dd\'T\'HH:mm:ssZZ') }}">
<meta property="og:article:modified_time" content="{{ last_modified_at | date('yyyy-LL-dd\'T\'HH:mm:ssZZ') }}">

<link rel="preconnect" href="https://res.cloudinary.com">
<meta name="keywords" content="{{ keywords }}">
<meta name="yandex-verification" content="e41ff5e9244f15b0">


<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
<link rel="manifest" href="/assets/favicons/site.webmanifest">
<link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#5bbad5">
<link rel="shortcut icon" href="/assets/favicons/favicon.ico">
<meta name="msapplication-TileColor" content="#fefefe">
<meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">